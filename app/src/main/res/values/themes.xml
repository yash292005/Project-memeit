<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/OnPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/OnPrimaryColor</item>
        <item name="colorOnPrimary">@color/PrimaryVarient</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFFFFF</item>
        <item name="colorSecondaryVariant">@color/Primarycolor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#B00A5A</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LightTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Memeit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Memeit.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LightTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="LightTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>